<%= form_with(model: label) do |form| %>
  <% if label.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(label.errors.count, "件のエラー") %>が発生したため送信されませんでした</h2>

      <ul>
        <% label.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :名前 %>
    <%= form.text_field :name, placeholder: "ラベル名を入力" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
