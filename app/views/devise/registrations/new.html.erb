<h2><%= t('.sign_up') %></h2>

<div class="container"> 
  <div class="row justify-content-center">
    <div class="col-8"> 
      <div class="card"> 
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="card-text">
              <%= f.label :あだ名 %><br />
              <%= f.text_field :name, placeholder: "あだ名を入力"%>
            </div>

            <div class="card-text">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Emailアドレスを入力" %>
            </div>

            <div class="card-text">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワードを入力"%>
            </div>

            <div class="card-text">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワードを再入力" %>
            </div>

            <div class="actions">
              <%= f.submit t('.sign_up'), class: "btn btn-primary mt-2" %>
            </div>
          <% end %>
          <%= render "devise/shared/links"%>
        </div>
      </div>
    </div>
  </div>
</div>