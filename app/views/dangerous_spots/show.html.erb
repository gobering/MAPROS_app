<div class="dangerous_spot_field">
  <p>
    <strong>住所:</strong>
    <%= @dangerous_spot.address %>
  </p>

  <p>
    <strong>事象:</strong>
    <%= @dangerous_spot.content %>
  </p>

  <p>状況: 
    <% @dangerous_spot.labels.each do |label| %>
      <%= label.name %>
    <% end %>
  </p>
  
  <% unless @dangerous_spot.user_id == current_user.id %>
    <% if @favorite.present? %>
      <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
    <% else %>
      <%= link_to 'お気に入りする', favorites_path(dangerous_spot_id: @dangerous_spot.id), method: :post, class: 'btn btn-primary' %>
    <% end %>
  <% end %>

  <% if @dangerous_spot.user_id == current_user.id %>
    <%= link_to '編集', edit_dangerous_spot_path(@dangerous_spot), data: {"turbolinks" => false} %>
  <% end %> 

  <% if @dangerous_spot.user_id == current_user.id %>
    <%= link_to '削除', @dangerous_spot, method: :delete, data: { confirm: '本当に削除しますか?' } %>
  <% end %>

  
  <div id='map'></div>
  <style>
  #map {
    height: 600px;
    width: 100%;
  }
  </style>
  
  <!-- js部分 -->
  <script>
  //初期マップの設定
  let map
  let marker
  function initMap(){
    geocoder = new google.maps.Geocoder()
    map = new google.maps.Map(document.getElementById('map'), {
      center:  {lat: <%= @dangerous_spot.latitude %>, lng: <%= @dangerous_spot.longitude %>},
      zoom: 15,
    });
    marker = new google.maps.Marker({
      position:  {lat: <%= @dangerous_spot.latitude %>, lng: <%= @dangerous_spot.longitude %>},
      map: map
   });
  }
  </script>
  <script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAP_API'] %>&callback=initMap" async defer></script>
  
  
  <%= link_to '戻る', dangerous_spots_path, data: {"turbolinks" => false}  %>
</div>
